<UserControl
    x:Class="Magehelper.Views.Controls.ArcaneGlyphListItemControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="using:Magehelper.ViewModels.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DataContext="{d:DesignInstance Type=controls:ArcaneGlyphListItemControlViewModel}"
    mc:Ignorable="d">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition />
        </Grid.RowDefinitions>
        <TextBlock
            Grid.Row="0"
            Grid.Column="0"
            Margin="5"
            Text="{Binding Name}" />
        <TextBlock
            Grid.Row="0"
            Grid.Column="1"
            Margin="5"
            Text="{Binding Duration}" />
        <Button
            Grid.Row="0"
            Grid.Column="2"
            Margin="5"
            Command="{Binding DeleteCommand}">
            <Image
                Width="15"
                Height="15"
                Source="/Assets/del_button.png" />
        </Button>
        <TextBlock
            Grid.Row="1"
            Grid.Column="0"
            Grid.ColumnSpan="3"
            Margin="5"
            Text="{Binding AppliedTo}" />
    </Grid>
</UserControl>
