<!--  ReSharper disable Xaml.BindingWithoutContextNotResolved  -->
<UserControl
    x:Class="Magehelper.Views.Controls.ArtifactControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="Auto" MinWidth="200" />
            <ColumnDefinition Width="100" />
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="Auto" />
        </Grid.ColumnDefinitions>
        <Button
            Grid.Row="0"
            Grid.Column="0"
            Margin="5"
            Click="BtnDropDown_OnClick">
            <Image
                Width="15"
                Height="15"
                Source="/Assets/dropdown_button.png" />
        </Button>
        <TextBlock
            Grid.Row="0"
            Grid.Column="1"
            Margin="5,5,0,5"
            VerticalAlignment="Center"
            Text="{Binding ShortDescription}" />
        <Button
            Grid.Row="0"
            Grid.Column="2"
            Margin="5"
            Command="{Binding ActivateArtifactCommand}"
            Content="Aktivieren"
            IsEnabled="{Binding IsActivateButtonEnabled}"
            Visibility="{Binding IsActivateButtonVisible, Converter={StaticResource BoolToVisibilityConverter}}" />
        <Button
            Grid.Row="0"
            Grid.Column="3"
            Margin="5"
            Command="{Binding RechargeArtifactCommand}"
            Content="wieder aufladen"
            Visibility="{Binding IsRechargeButtonVisible, Converter={StaticResource BoolToVisibilityConverter}}" />
        <Button
            Grid.Row="0"
            Grid.Column="4"
            Margin="5"
            Command="{Binding DeleteArtifactCommand}">
            <Image
                Width="15"
                Height="15"
                Source="/Assets/del_button.png" />
        </Button>
        <TextBlock
            x:Name="ArtifactDescription"
            Grid.Row="1"
            Grid.Column="1"
            Grid.ColumnSpan="4"
            Margin="5"
            Text="{Binding ExtendedDescription}"
            TextWrapping="WrapWholeWords"
            Visibility="Collapsed" />
    </Grid>
</UserControl>
