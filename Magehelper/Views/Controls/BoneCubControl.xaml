<UserControl
    x:Class="Magehelper.Views.Controls.BoneCubControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:converters="clr-namespace:CommunityToolkit.WinUI.UI.Converters;assembly=CommunityToolkit.WinUI.UI"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:gb="clr-namespace:UnoGroupBox;assembly=UnoGroupBox"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:vm="clr-namespace:Magehelper.ViewModels.Controls"
    mc:Ignorable="d">
    <UserControl.DataContext>
        <vm:BoneCubControlViewModel />
    </UserControl.DataContext>
    <UserControl.Resources>
        <converters:BoolToVisibilityConverter x:Key="BoolToVisibilityConverter" />
    </UserControl.Resources>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
        </Grid.RowDefinitions>
        <TextBlock
            Grid.Row="0"
            Grid.Column="0"
            Grid.ColumnSpan="2"
            Margin="5"
            Text="{Binding BoneCubType, Mode=OneTime}" />
        <TextBlock
            Grid.Row="1"
            Grid.Column="0"
            Margin="5"
            Text="BF:" />
        <TextBlock
            Grid.Row="1"
            Grid.Column="1"
            Margin="5"
            Text="{Binding Bf}" />
        <TextBlock
            Grid.Row="2"
            Grid.Column="0"
            Margin="5"
            Text="TP:" />
        <TextBlock
            Grid.Row="2"
            Grid.Column="1"
            Margin="5"
            Text="{Binding Tp}" />
        <TextBlock
            Grid.Row="3"
            Grid.Column="0"
            Margin="5"
            Text="mTP:" />
        <TextBlock
            Grid.Row="3"
            Grid.Column="1"
            Margin="5"
            Text="{Binding Mtp}" />
        <TextBlock
            Grid.Row="4"
            Grid.Column="0"
            Margin="5"
            Text="Magiegespür:"
            Visibility="{Binding IsSenseMagicSkillVisible, Converter={StaticResource BoolToVisibilityConverter}}" />
        <TextBlock
            Grid.Row="4"
            Grid.Column="1"
            Margin="5"
            Text="{Binding SenseMagicSkill}"
            Visibility="{Binding IsSenseMagicSkillVisible, Converter={StaticResource BoolToVisibilityConverter}}" />
        <gb:GroupBox
            Grid.Row="5"
            Grid.Column="0"
            Grid.ColumnSpan="2"
            Margin="5"
            Header="Geist der Keule"
            Visibility="{Binding IsEnsoulEntityVisible, Converter={StaticResource BoolToVisibilityConverter}}">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition />
                    <RowDefinition />
                </Grid.RowDefinitions>
                <TextBlock
                    Grid.Row="0"
                    Grid.Column="0"
                    Grid.ColumnSpan="2"
                    Margin="0,5,5,5"
                    Text="{Binding EnsoulEntityName}" />
                <TextBlock
                    Grid.Row="1"
                    Grid.Column="0"
                    Margin="0,5,5,5"
                    Text="LO:" />
                <TextBlock
                    Grid.Row="1"
                    Grid.Column="1"
                    Margin="5"
                    Text="{Binding EnsoulEntityLoyalty}" />
            </Grid>
        </gb:GroupBox>
    </Grid>
</UserControl>
