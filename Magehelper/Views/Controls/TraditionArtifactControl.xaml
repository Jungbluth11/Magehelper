<!--  ReSharper disable Xaml.BindingWithoutContextNotResolved  -->
<UserControl
    x:Class="Magehelper.Views.Controls.TraditionArtifactControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Name="RootTraditionArtifactControl"
    DataContextChanged="TraditionArtifactControl_OnDataContextChanged"
    mc:Ignorable="d">
    <Grid x:Name="Grid" Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="auto" />
            <RowDefinition Height="auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        <Button
            Grid.Row="0"
            Grid.ColumnSpan="2"
            Width="25"
            Height="25"
            Margin="5"
            HorizontalAlignment="Right"
            BorderThickness="0"
            Command="{Binding DeleteCommand}">
            <Image Source="/Assets/del_button.png" />
        </Button>
        <StackPanel
            Grid.Row="1"
            Grid.Column="1"
            HorizontalAlignment="Right"
            Orientation="Horizontal">
            <TextBlock VerticalAlignment="Center" Text="{Binding ArtifactSpellCounterText}" />
            <TextBlock
                Margin="0,0,10,0"
                VerticalAlignment="Center"
                Text="{Binding ArtifactSpellCounterValue}" />
            <Button
                HorizontalAlignment="Right"
                Click="AddArtifact_OnClick"
                Content="Zauber hinzufügen" />
        </StackPanel>
        <TextBlock
            Grid.Row="2"
            Grid.Column="1"
            HorizontalAlignment="Center"
            FontSize="14"
            Text="{Binding ArtifactSpellName}" />
        <ItemsControl
            Grid.Row="2"
            Grid.Column="1"
            Margin="5"
            ItemsSource="{Binding Spells}">
            <ItemsControl.ItemsPanel>
                <ItemsPanelTemplate>
                    <StackPanel Orientation="Vertical" />
                </ItemsPanelTemplate>
            </ItemsControl.ItemsPanel>
            <ItemsControl.ItemTemplate>
                <DataTemplate>
                    <Grid Name="GridArtifactSpellTemplate" Margin="5">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="20" />
                        </Grid.ColumnDefinitions>
                        <TextBlock Grid.Column="0" Text="{Binding DisplayText}" />
                        <Button
                            Grid.Column="1"
                            Width="20"
                            Height="20"
                            Command="{Binding DataContext.RemoveArtifactSpellCommand, ElementName=RootTraditionArtifactControl}"
                            CommandParameter="{Binding}"
                            IsEnabled="{Binding IsNew}"
                            Tag="{Binding}">
                            <Image Margin="2" Source="/Assets/del_button.png" />
                        </Button>
                    </Grid>
                </DataTemplate>
            </ItemsControl.ItemTemplate>
        </ItemsControl>
    </Grid>
</UserControl>
