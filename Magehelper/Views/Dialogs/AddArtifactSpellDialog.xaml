<!--  ReSharper disable Xaml.BindingWithoutContextNotResolved  -->
<ContentDialog
    x:Class="Magehelper.Views.Dialogs.AddArtifactSpellDialog"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="{Binding DialogTitle}"
    CloseButtonText="Abbrechen"
    DataContextChanged="AddArtifactSpellDialog_OnDataContextChanged"
    PrimaryButtonCommand="{Binding AddSpellCommand}"
    PrimaryButtonText="Hinzufügen"
    Style="{ThemeResource DefaultContentDialogStyle}">
    <Grid x:Name="Grid">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <ComboBox
            Grid.Row="0"
            Margin="10"
            ItemsSource="{Binding SpellNames}"
            SelectedValue="{Binding SelectedSpellName, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}" />
        <Border
            Grid.Row="2"
            Margin="10"
            BorderBrush="Red"
            Visibility="{Binding IsErrorVisible, Converter={StaticResource BoolToVisibilityConverter}}">
            <TextBlock Background="#FF7F7F" Text="{Binding ErrorText}" />
        </Border>
    </Grid>
</ContentDialog>
