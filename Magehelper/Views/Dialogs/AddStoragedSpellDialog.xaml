<ContentDialog
    x:Class="Magehelper.Views.Dialogs.AddStoragedSpellDialog"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:vm="using:Magehelper.ViewModels.Dialogs"
    Title="Zauber hinzufügen"
    CloseButtonText="Abbrechen"
    PrimaryButtonCommand="{Binding SubmitCommand}"
    PrimaryButtonText="Hinzufügen"
    Style="{ThemeResource DefaultContentDialogStyle}">
    <ContentDialog.DataContext>
        <vm:AddSpellDialogViewModel />
    </ContentDialog.DataContext>
    <Grid Margin="5">
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition Width="auto" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
        </Grid.RowDefinitions>
        <TextBlock
            Grid.Row="0"
            Grid.Column="0"
            Margin="5"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Text="Name:" />
        <TextBox
            Grid.Row="0"
            Grid.Column="1"
            Width="165"
            Margin="5"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Text="{Binding Name, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}" />
        <TextBlock
            Grid.Row="1"
            Grid.Column="0"
            Margin="5"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Text="Merkmal:" />
        <ComboBox
            Grid.Row="1"
            Grid.Column="1"
            Width="165"
            Margin="5"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            ItemsSource="{Binding CharacteristicStrings}"
            SelectedValue="{Binding Characteristic, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}" />
        <TextBlock
            Grid.Row="2"
            Grid.Column="0"
            Margin="5"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Text="Komplexität:" />
        <ComboBox
            Grid.Row="2"
            Grid.Column="1"
            Width="165"
            Margin="5"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            ItemsSource="{Binding KomplexStrings}"
            SelectedValue="{Binding Komplex, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}" />
        <TextBlock
            Grid.Row="3"
            Grid.Column="0"
            Margin="5"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Text="Kosten:" />
        <NumberBox
            Grid.Row="3"
            Grid.Column="1"
            Width="165"
            Margin="5"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            KeyDown="UIElement_OnKeyDown"
            SpinButtonPlacementMode="Compact"
            Value="{Binding Cost, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}" />
        <TextBlock
            Grid.Row="4"
            Grid.Column="0"
            Margin="5"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Text="ZfP:" />
        <NumberBox
            Grid.Row="4"
            Grid.Column="1"
            Width="165"
            Margin="5"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            KeyDown="UIElement_OnKeyDown"
            SpinButtonPlacementMode="Compact"
            Value="{Binding Zfp, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}" />
        <TextBlock
            Grid.Row="5"
            Grid.Column="0"
            Margin="5"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Text="Speichern in:" />
        <ComboBox
            Grid.Row="5"
            Grid.Column="1"
            Width="165"
            Margin="5"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            ItemsSource="{Binding SpellStorages}"
            SelectedIndex="{Binding SpellstorageNumber, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}" />
    </Grid>
</ContentDialog>
