<ContentDialog
    x:Class="Magehelper.Views.Dialogs.EnableSpellStorageDialog"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:vm="clr-namespace:Magehelper.ViewModels.Dialogs"
    Name="ContentDialog"
    Title="Zauberspeicher formatieren"
    PrimaryButtonCommand="{Binding SubmitCommand}"
    PrimaryButtonText="Ok"
    Style="{ThemeResource DefaultContentDialogStyle}">
    <ContentDialog.DataContext>
        <vm:EnableSpellStorageDialogViewModel />
    </ContentDialog.DataContext>
    <Grid Margin="5">
        <Grid.RowDefinitions>
            <RowDefinition Height="auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="auto" />
        </Grid.RowDefinitions>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="130" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="160" />
            </Grid.ColumnDefinitions>
            <StackPanel Grid.Column="0" Orientation="Horizontal">
                <TextBlock VerticalAlignment="Center" Text="Punkte verfügbar:" />
                <TextBlock
                    Name="StringPointsRemain"
                    Margin="-7,0,0,0"
                    VerticalAlignment="Center" />
            </StackPanel>
            <NumberBox
                Grid.Column="0"
                Width="100"
                VerticalAlignment="Center"
                KeyDown="UIElement_OnKeyDown"
                Maximum="{Binding PointsRemain}"
                Minimum="1"
                SpinButtonPlacementMode="Compact"
                Value="1" />
        </Grid>
        <ItemsControl Grid.Row="1" ItemsSource="{Binding SpellStorages}">
            <ItemsControl.ItemsPanel>
                <ItemsPanelTemplate>
                    <WrapPanel Orientation="Vertical" />
                </ItemsPanelTemplate>
            </ItemsControl.ItemsPanel>
            <ItemsControl.ItemTemplate>
                <DataTemplate>
                    <Grid Margin="5">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="110" />
                            <ColumnDefinition Width="20" />
                        </Grid.ColumnDefinitions>
                        <TextBlock Grid.Column="0" Text="{Binding Path=Text}" />
                        <Button
                            Grid.Column="1"
                            Command="{Binding DataContext.RemoveSpellStorageCommand, ElementName=ContentDialog}"
                            CommandParameter="{Binding}"
                            Tag="{Binding}">
                            <Image Margin="2" Source="/Assets/del_button.png" />
                        </Button>
                    </Grid>
                </DataTemplate>
            </ItemsControl.ItemTemplate>
        </ItemsControl>
        <Button
            Grid.Row="2"
            Margin="5"
            HorizontalAlignment="Center"
            Command="{Binding SubmitCommand}"
            CommandParameter="{Binding ElementName=enableSpellStorageWindow}"
            Content="OK" />
    </Grid>
</ContentDialog>
