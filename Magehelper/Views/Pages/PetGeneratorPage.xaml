<Page
    x:Class="Magehelper.Views.Pages.PetGeneratorPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:viewModel="clr-namespace:Magehelper.ViewModels.Pages"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}"
    mc:Ignorable="d">
    <Page.DataContext>
        <viewModel:PetGeneratorPageViewModel />
    </Page.DataContext>
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="auto" />
            <RowDefinition />
            <RowDefinition Height="auto" />
        </Grid.RowDefinitions>
        <StackPanel Grid.Row="0" Orientation="Horizontal">
            <TextBlock Text="Kosten:" />
            <TextBlock Text="{Binding Cost}" />
            <TextBlock Margin="0,0,20,0" Text="AP" />
            <TextBlock Text="Punkte für Eigenschaften:" />
            <TextBlock Text="{Binding PointsValue}" />
        </StackPanel>
        <Grid Grid.Row="1" VerticalAlignment="Center">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="auto" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="auto" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition />
                <RowDefinition />
                <RowDefinition />
                <RowDefinition />
                <RowDefinition />
                <RowDefinition />
                <RowDefinition />
            </Grid.RowDefinitions>
            <StackPanel
                Grid.Row="0"
                Grid.Column="0"
                Grid.ColumnSpan="2"
                Orientation="Horizontal">
                <TextBlock Text="Tierart" />
                <ComboBox
                    Width="115"
                    Margin="5"
                    ItemsSource="{Binding SpeciesStrings}"
                    SelectedValue="{Binding Species, UpdateSourceTrigger=PropertyChanged}" />
            </StackPanel>
            <CheckBox
                Grid.Row="0"
                Grid.Column="2"
                Grid.ColumnSpan="2"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Content="machtvoller Vertrauter"
                IsChecked="{Binding IsMightyCompanion, UpdateSourceTrigger=PropertyChanged}" />
            <TextBlock
                Grid.Row="1"
                Grid.Column="0"
                Text="Mut" />
            <NumberBox
                Grid.Row="1"
                Grid.Column="1"
                HorizontalAlignment="Left"
                KeyDown="UIElement_OnKeyDown"
                Maximum="{Binding MuMax}"
                Minimum="{Binding MuMin}"
                SpinButtonPlacementMode="Compact"
                Value="{Binding Mu, UpdateSourceTrigger=PropertyChanged}" />
            <TextBlock
                Grid.Row="2"
                Grid.Column="0"
                Text="Klugheit" />
            <NumberBox
                Grid.Row="2"
                Grid.Column="1"
                HorizontalAlignment="Left"
                KeyDown="UIElement_OnKeyDown"
                Maximum="{Binding KlMax}"
                Minimum="{Binding KlMin}"
                SpinButtonPlacementMode="Compact"
                Value="{Binding Kl, UpdateSourceTrigger=PropertyChanged}" />
            <TextBlock
                Grid.Row="3"
                Grid.Column="0"
                Text="Intuition" />
            <NumberBox
                Grid.Row="3"
                Grid.Column="1"
                HorizontalAlignment="Left"
                KeyDown="UIElement_OnKeyDown"
                Maximum="{Binding InMax}"
                Minimum="{Binding InMin}"
                SpinButtonPlacementMode="Compact"
                Value="{Binding In, UpdateSourceTrigger=PropertyChanged}" />
            <TextBlock
                Grid.Row="4"
                Grid.Column="0"
                Text="Charisma" />
            <NumberBox
                Grid.Row="4"
                Grid.Column="1"
                HorizontalAlignment="Left"
                KeyDown="UIElement_OnKeyDown"
                Maximum="{Binding ChMax}"
                Minimum="{Binding ChMin}"
                SpinButtonPlacementMode="Compact"
                Value="{Binding Ch, UpdateSourceTrigger=PropertyChanged}" />
            <TextBlock
                Grid.Row="5"
                Grid.Column="0"
                Text="Fingerfertigkeit" />
            <NumberBox
                Grid.Row="5"
                Grid.Column="1"
                HorizontalAlignment="Left"
                KeyDown="UIElement_OnKeyDown"
                Maximum="{Binding FfMax}"
                Minimum="{Binding FfMin}"
                SpinButtonPlacementMode="Compact"
                Value="{Binding Ff, UpdateSourceTrigger=PropertyChanged}" />
            <TextBlock
                Grid.Row="6"
                Grid.Column="0"
                Text="Gewandtheit" />
            <NumberBox
                Grid.Row="6"
                Grid.Column="1"
                HorizontalAlignment="Left"
                KeyDown="UIElement_OnKeyDown"
                Maximum="{Binding GeMax}"
                Minimum="{Binding GeMin}"
                SpinButtonPlacementMode="Compact"
                Value="{Binding Ge, UpdateSourceTrigger=PropertyChanged}" />
            <TextBlock
                Grid.Row="1"
                Grid.Column="2"
                Text="Konstitution" />
            <NumberBox
                Grid.Row="1"
                Grid.Column="3"
                HorizontalAlignment="Left"
                KeyDown="UIElement_OnKeyDown"
                Maximum="{Binding KoMax}"
                Minimum="{Binding KoMin}"
                SpinButtonPlacementMode="Compact"
                Value="{Binding Ko, UpdateSourceTrigger=PropertyChanged}" />
            <TextBlock
                Grid.Row="2"
                Grid.Column="2"
                Text="Körperkraft" />
            <NumberBox
                Grid.Row="2"
                Grid.Column="3"
                HorizontalAlignment="Left"
                KeyDown="UIElement_OnKeyDown"
                Maximum="{Binding KkMax}"
                Minimum="{Binding KkMin}"
                SpinButtonPlacementMode="Compact"
                Value="{Binding Kk, UpdateSourceTrigger=PropertyChanged}" />
            <TextBlock
                Grid.Row="3"
                Grid.Column="2"
                Text="Lebensenergie" />
            <NumberBox
                Grid.Row="3"
                Grid.Column="3"
                HorizontalAlignment="Left"
                KeyDown="UIElement_OnKeyDown"
                Maximum="{Binding LeMax}"
                Minimum="{Binding LeMin}"
                SpinButtonPlacementMode="Compact"
                Value="{Binding Le, UpdateSourceTrigger=PropertyChanged}" />
            <TextBlock
                Grid.Row="4"
                Grid.Column="2"
                Text="Astralenergie" />
            <NumberBox
                Grid.Row="4"
                Grid.Column="3"
                HorizontalAlignment="Left"
                KeyDown="UIElement_OnKeyDown"
                Maximum="{Binding AeMax}"
                Minimum="{Binding AeMin}"
                SpinButtonPlacementMode="Compact"
                Value="{Binding Ae, UpdateSourceTrigger=PropertyChanged}" />
            <TextBlock
                Grid.Row="5"
                Grid.Column="2"
                Text="Ausdauer" />
            <NumberBox
                Grid.Row="5"
                Grid.Column="3"
                HorizontalAlignment="Left"
                KeyDown="UIElement_OnKeyDown"
                Maximum="{Binding AuMax}"
                Minimum="{Binding Au}"
                SpinButtonPlacementMode="Compact"
                Value="{Binding Au, UpdateSourceTrigger=PropertyChanged}" />
        </Grid>
        <Button
            Grid.Row="2"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            Click="Button_OnClick"
            Content="Hinzufügen" />
    </Grid>
</Page>
