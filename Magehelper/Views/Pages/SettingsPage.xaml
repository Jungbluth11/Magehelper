<Page
    x:Class="Magehelper.Views.Pages.SettingsPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:gb="clr-namespace:UnoGroupBox;assembly=UnoGroupBox"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:models="clr-namespace:Magehelper.Models"
    xmlns:vm="clr-namespace:Magehelper.ViewModels.Pages"
    x:Name="RootSettingsPage"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}"
    mc:Ignorable="d">
    <Page.DataContext>
        <vm:SettingsPageViewModel />
    </Page.DataContext>
    <Grid Margin="5">
        <Grid.RowDefinitions>
            <RowDefinition Height="auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="auto" />
        </Grid.RowDefinitions>
        <StackPanel Grid.Row="0" Orientation="Horizontal">
            <ComboBox
                Width="150"
                Margin="5"
                VerticalAlignment="Center"
                ItemsSource="{Binding ConfigNames}"
                SelectedValue="{Binding CurrentConfigName, UpdateSourceTrigger=PropertyChanged}" />
            <Button Margin="5" Click="BtnAddConfig_Click">
                <Image Margin="1" Source="/Assets/add_button.png" />
            </Button>
            <TextBlock
                Margin="5"
                VerticalAlignment="Center"
                Text="Theme:" />
            <ToggleSwitch
                Margin="0,5,5,5"
                IsOn="{Binding IsDarkTheme}"
                OffContent="Hell"
                OnContent="Dunkel"
                Toggled="ToggleSwitchTheme_OnToggled" />
        </StackPanel>
        <TabView
            Name="TabControlMain"
            Grid.Row="1"
            IsAddTabButtonVisible="False">
            <TabViewItem Header="Allgemein" IsClosable="False">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="auto" />
                        <ColumnDefinition Width="auto" />
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="auto" />
                        <RowDefinition Height="auto" />
                        <RowDefinition Height="auto" />
                    </Grid.RowDefinitions>
                    <gb:GroupBox
                        Grid.Row="0"
                        Grid.RowSpan="3"
                        Grid.Column="0"
                        Margin="5"
                        Header="Tabs anzeigen"
                        Theme="Fluent">
                        <ItemsControl Name="ShowTabsPanel" ItemsSource="{Binding TabSettings}">
                            <ItemsControl.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <StackPanel />
                                </ItemsPanelTemplate>
                            </ItemsControl.ItemsPanel>
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <CheckBox
                                        Click="CheckBoxTabSettings_OnClick"
                                        Content="{Binding TabName}"
                                        IsChecked="{Binding ShowTab}" />
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </gb:GroupBox>
                    <StackPanel
                        Grid.Row="0"
                        Grid.Column="1"
                        Margin="10">
                        <CheckBox Content="Warnung beim Laden von Dateien andere Magehelper Versionen anzeigen" IsChecked="{Binding WarnOtherVersionFiles, UpdateSourceTrigger=PropertyChanged}" />
                    </StackPanel>
                    <gb:GroupBox
                        Grid.Row="1"
                        Grid.Column="1"
                        Margin="5"
                        Header="Objektrituale (Artefaktzauber)"
                        Theme="Fluent">
                        <StackPanel>
                            <CheckBox Content="Verhindere Entfernen von Zaubern nach Neuladen" IsChecked="{Binding AllowRemoveSpells, UpdateSourceTrigger=PropertyChanged}" />
                            <CheckBox Content="Helden-Software- statt Regelbuchnamen verwenden." IsChecked="{Binding UseHeldentoolNames, UpdateSourceTrigger=PropertyChanged}" />
                        </StackPanel>
                    </gb:GroupBox>
                    <gb:GroupBox
                        Grid.Row="2"
                        Grid.Column="1"
                        Margin="5"
                        Header="Updates"
                        Theme="Fluent">
                        <StackPanel>
                            <CheckBox
                                x:Name="CbUpdate"
                                Content="Nach Updates suchen"
                                IsChecked="{Binding CheckForUpdates, UpdateSourceTrigger=PropertyChanged}" />
                            <CheckBox
                                Margin="20,0,0,0"
                                Content="Updates automatisch installieren"
                                IsChecked="{Binding AutoinstallUpdates, UpdateSourceTrigger=PropertyChanged}"
                                IsEnabled="{Binding IsChecked, ElementName=CbUpdate}" />
                            <Button
                                Margin="5"
                                HorizontalAlignment="Left"
                                Command="{Binding ForceUpdateCommand}"
                                Content="Jetzt updaten" />
                        </StackPanel>
                    </gb:GroupBox>
                </Grid>
            </TabViewItem>
            <TabViewItem Header="Hausregeln" IsClosable="False">
                <TabView
                    x:Name="TabControlArtifacts"
                    IsAddTabButtonVisible="False"
                    TabItemsSource="{Binding HomeBrewTabs}">
                    <TabView.TabItemTemplate>
                        <DataTemplate x:DataType="models:HomeBrewTab">
                            <TabViewItem Header="{Binding Name}" IsClosable="False">
                                <ItemsControl Name="ItemsControl1" ItemsSource="{Binding Spells}">
                                    <ItemsControl.ItemsPanel>
                                        <ItemsPanelTemplate>
                                            <WrapPanel Orientation="Vertical" />
                                        </ItemsPanelTemplate>
                                    </ItemsControl.ItemsPanel>
                                    <ItemsControl.ItemTemplate>
                                        <DataTemplate>
                                            <Grid>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="120" />
                                                    <ColumnDefinition Width="auto" />
                                                    <ColumnDefinition Width="auto" />
                                                </Grid.ColumnDefinitions>
                                                <TextBlock
                                                    Grid.Column="0"
                                                    Margin="5"
                                                    Text="{Binding Name}" />
                                                <TextBlock
                                                    Grid.Column="1"
                                                    Margin="5"
                                                    Text="AsP:" />
                                                <NumberBox
                                                    Grid.Column="2"
                                                    KeyDown="UIElement_OnKeyDown"
                                                    Minimum="0"
                                                    SpinButtonPlacementMode="Compact"
                                                    Tag="{Binding Name}"
                                                    ValueChanged="NumberBoxHomeBrew_OnValueChanged"
                                                    Value="{Binding Cost}" />
                                            </Grid>
                                        </DataTemplate>
                                    </ItemsControl.ItemTemplate>
                                </ItemsControl>
                            </TabViewItem>
                        </DataTemplate>
                    </TabView.TabItemTemplate>
                </TabView>
            </TabViewItem>
        </TabView>
        <StackPanel
            Grid.Row="2"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            Orientation="Horizontal">
            <Button
                Margin="5"
                Click="BtnSave_OnClick"
                Content="Speichern" />
            <Button
                Margin="5"
                Click="BtnCancel_OnClick"
                Content="Abbrechen" />
        </StackPanel>
    </Grid>
</Page>
