<TabViewItem
    x:Class="Magehelper.Views.Tabs.TabFlameSword"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:converters="clr-namespace:CommunityToolkit.WinUI.UI.Converters;assembly=CommunityToolkit.WinUI.UI"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:vm="clr-namespace:Magehelper.ViewModels.Tabs"
    Header="Flammenschwert"
    IsClosable="False"
    mc:Ignorable="d">
    <TabViewItem.DataContext>
        <vm:TabFlameSwordViewModel />
    </TabViewItem.DataContext>
    <TabViewItem.Resources>
        <converters:BoolToVisibilityConverter x:Key="BoolToVisibilityConverter" />
    </TabViewItem.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="70" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <StackPanel
            Grid.Row="0"
            Margin="5"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Orientation="Horizontal">
            <Button
                Width="100"
                Margin="5"
                Click="Button_OnClick"
                Content="{Binding ButtonText}"
                IsEnabled="{Binding FlameSwordExist}" />
        </StackPanel>
        <TextBlock
            Grid.Row="1"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            FontSize="24"
            FontWeight="Bold"
            Text="kein Flammenschwert vorhanden"
            Visibility="{Binding ShowNoFlameSwordText, Converter={StaticResource BoolToVisibilityConverter}}" />
        <Grid
            Grid.Row="1"
            Margin="5"
            Visibility="{Binding FlameSwordExist, Converter={StaticResource BoolToVisibilityConverter}}">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="250" />
                <ColumnDefinition />
                <ColumnDefinition />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="70" />
                <RowDefinition />
                <RowDefinition />
                <RowDefinition />
                <RowDefinition />
                <RowDefinition />
                <RowDefinition />
            </Grid.RowDefinitions>
            <StackPanel
                Grid.Row="0"
                Grid.Column="0"
                Orientation="Horizontal">
                <TextBlock Text="RkP* verfügbar:" />
                <TextBlock
                    Name="StringRkp"
                    Margin="-7,0,0,0"
                    Text="{Binding RkpValue}" />
            </StackPanel>
            <TextBlock
                Grid.Row="2"
                Grid.Column="0"
                Text="TP erhöhen (je 2 RkP*)" />
            <TextBlock
                Grid.Row="3"
                Grid.Column="0"
                Text="Parade erschweren (je 2 RkP*, max 10)" />
            <TextBlock
                Grid.Row="4"
                Grid.Column="0"
                Text="Nur bei Fernlenkung:" />
            <TextBlock
                Grid.Row="5"
                Grid.Column="0"
                Text="Attacke erhöhen (je 1 RkP*, max 6)" />
            <TextBlock
                Grid.Row="6"
                Grid.Column="0"
                Text="GS erhöhen (je 2 RkP*, max 10)" />
            <NumberBox SpinButtonPlacementMode="Compact"
                Grid.Row="2"
                Grid.Column="1"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                IsEnabled="{Binding IsEnabled}"
                KeyDown="UIElement_OnKeyDown"
                Minimum="0"
                Value="{Binding TpRkp, UpdateSourceTrigger=PropertyChanged}" />
            <NumberBox SpinButtonPlacementMode="Compact"
                Grid.Row="3"
                Grid.Column="1"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                IsEnabled="{Binding IsEnabled}"
                KeyDown="UIElement_OnKeyDown"
                Maximum="{Binding ParryRkpMax}"
                Minimum="0"
                Value="{Binding ParryRkp, UpdateSourceTrigger=PropertyChanged}" />
            <NumberBox SpinButtonPlacementMode="Compact"
                Grid.Row="5"
                Grid.Column="1"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                IsEnabled="{Binding IsEnabled}"
                KeyDown="UIElement_OnKeyDown"
                Maximum="{Binding AttackRkpMax}"
                Minimum="0"
                Value="{Binding AttackRkp, UpdateSourceTrigger=PropertyChanged}" />
            <NumberBox SpinButtonPlacementMode="Compact"
                Grid.Row="6"
                Grid.Column="1"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                IsEnabled="{Binding IsEnabled}"
                KeyDown="UIElement_OnKeyDown"
                Maximum="{Binding GsRkpMax}"
                Minimum="0"
                Value="{Binding GsRkp, UpdateSourceTrigger=PropertyChanged}" />
            <TextBlock
                Grid.Row="1"
                Grid.Column="2"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                FontWeight="Bold"
                Text="Werte des Flammenschwerts" />
            <StackPanel
                Grid.Row="2"
                Grid.Column="2"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                Orientation="Horizontal">
                <TextBlock Text="TP: 1W6 +" />
                <TextBlock Margin="-7,0,0,0" Text="{Binding TpValue}" />
            </StackPanel>
            <StackPanel
                Grid.Row="3"
                Grid.Column="2"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                Orientation="Horizontal">
                <TextBlock Text="Paradeerschwernis:" />
                <TextBlock Margin="-7,0,0,0" Text="{Binding ParryValue}" />
            </StackPanel>
            <TextBlock
                Grid.Row="4"
                Grid.Column="2"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                Text="Nur bei Fernlenkung:" />
            <StackPanel
                Grid.Row="5"
                Grid.Column="2"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                Orientation="Horizontal">
                <TextBlock Text="Attacke:" />
                <TextBlock Margin="-7,0,0,0" Text="{Binding AttackValue}" />
            </StackPanel>
            <StackPanel
                Grid.Row="6"
                Grid.Column="2"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                Orientation="Horizontal">
                <TextBlock Text="GS:" />
                <TextBlock Margin="-7,0,0,0" Text="{Binding GsValue}" />
            </StackPanel>
        </Grid>
    </Grid>
</TabViewItem>
