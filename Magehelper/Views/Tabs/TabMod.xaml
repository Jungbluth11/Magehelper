<TabViewItem
    x:Class="Magehelper.Views.Tabs.TabMod"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:gb="clr-namespace:UnoGroupBox;assembly=UnoGroupBox"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:vm="clr-namespace:Magehelper.ViewModels.Tabs"
    x:Name="RootTabMod"
    Header="Modifikationsrechner"
    IsClosable="False"
    mc:Ignorable="d">
    <TabViewItem.DataContext>
        <vm:TabModViewModel />
    </TabViewItem.DataContext>
    <Grid Margin="5">
        <Grid.RowDefinitions>
            <RowDefinition Height="auto" />
            <RowDefinition />
            <RowDefinition />
        </Grid.RowDefinitions>
        <StackPanel Orientation="Horizontal">
            <ComboBox
                Width="100"
                Margin="5"
                ItemsSource="{Binding RepresentationList}"
                SelectedValue="{Binding Representation, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}" />
            <TextBlock Margin="5" Text="{Binding InfoText}" />
        </StackPanel>
        <ItemsControl Grid.Row="1" ItemsSource="{Binding ModDataList}">
            <ItemsControl.ItemsPanel>
                <ItemsPanelTemplate>
                    <WrapPanel HorizontalAlignment="Center" Orientation="Horizontal" />
                </ItemsPanelTemplate>
            </ItemsControl.ItemsPanel>
            <ItemsControl.ItemTemplate>
                <DataTemplate>
                    <Grid Margin="10">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="400" />
                            <ColumnDefinition Width="300" />
                            <ColumnDefinition Width="100" />
                        </Grid.ColumnDefinitions>
                        <TextBlock Grid.Column="0" Text="{Binding Name}" />
                        <TextBlock Grid.Column="1" Text="{Binding Description}" />
                        <Button
                            Grid.Column="2"
                            Height="25"
                            Command="{Binding DataContext.AddModCommand, ElementName=RootTabMod}"
                            CommandParameter="{Binding}">
                            <Image Source="/Assets/add_button.png" />
                        </Button>
                    </Grid>
                </DataTemplate>
            </ItemsControl.ItemTemplate>
        </ItemsControl>
        <Grid Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition />
                <ColumnDefinition />
            </Grid.ColumnDefinitions>
            <gb:GroupBox
                Grid.Column="0"
                Header="Spontane Modifikationen"
                Theme="Fluent">
                <ItemsControl ItemsSource="{Binding ModList}">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <StackPanel Orientation="Vertical" />
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="auto" />
                                </Grid.ColumnDefinitions>
                                <TextBlock Grid.Column="0" Text="{Binding Name}" />
                                <Button
                                    Grid.Column="1"
                                    Command="{Binding DataContext.RemoveModCommand, ElementName=RootTabMod}"
                                    CommandParameter="{Binding}">
                                    <Image Source="/Assets/del_button.png" />
                                </Button>
                            </Grid>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </gb:GroupBox>
            <Canvas Grid.Column="1">
                <CheckBox
                    Canvas.Left="10"
                    Canvas.Top="10"
                    Checked="CheckBox_Checked"
                    Content="Magieresistenz"
                    IsChecked="{Binding UseMr, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}" />
                <Button
                    Canvas.Left="10"
                    Canvas.Top="40"
                    Command="{Binding ResetCommand}"
                    Content="Zurücksetzen" />
                <TextBlock
                    Canvas.Left="181"
                    Canvas.Top="80"
                    FontSize="18"
                    FontWeight="Bold"
                    Text="Gesamt:" />
                <TextBlock
                    Canvas.Left="260"
                    Canvas.Top="80"
                    FontSize="18"
                    FontWeight="Bold"
                    Text="{Binding ModValueTotal}" />
            </Canvas>
        </Grid>
    </Grid>
</TabViewItem>
