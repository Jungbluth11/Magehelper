<TabViewItem
    x:Class="Magehelper.Views.Tabs.TabSpellStorage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="clr-namespace:Magehelper.Views.Controls"
    xmlns:converters="clr-namespace:CommunityToolkit.WinUI.UI.Converters;assembly=CommunityToolkit.WinUI.UI"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:vm="clr-namespace:Magehelper.ViewModels.Tabs"
    Header="Zauberspeicher"
    IsClosable="False"
    mc:Ignorable="d">
    <TabViewItem.DataContext>
        <vm:TabSpellStorageViewModel />
    </TabViewItem.DataContext>
    <TabViewItem.Resources>
        <converters:BoolToVisibilityConverter x:Key="BoolToVisibilityConverter" />
    </TabViewItem.Resources>
    <Grid Margin="5">
        <Grid.RowDefinitions>
            <RowDefinition Height="70" />
            <RowDefinition />
        </Grid.RowDefinitions>
        <Button
            Grid.Row="0"
            Margin="5"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Click="Button_Click"
            Content="Zauber hinzufügen"
            IsEnabled="{Binding IsSpellStorageEnabled}" />
        <TextBlock
            Grid.Row="1"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            FontSize="24"
            FontWeight="Bold"
            Text="kein Zauberspeicher vorhanden"
            Visibility="{Binding ShowNoSpellStorageText, Converter={StaticResource BoolToVisibilityConverter}}" />
        <WrapPanel
            Grid.Row="1"
            Margin="5"
            Visibility="{Binding IsSpellStorageEnabled, Converter={StaticResource BoolToVisibilityConverter}}">
            <ItemsControl ItemsSource="{Binding SpellStorageList}">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <controls:SpellStorageControl DataContext="{Binding}" />
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </WrapPanel>
    </Grid>
</TabViewItem>
