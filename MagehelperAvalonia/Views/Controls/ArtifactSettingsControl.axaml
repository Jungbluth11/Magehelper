<UserControl
    x:Class="Magehelper.Avalonia.Views.Controls.ArtifactSettingsControl"
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:vm="using:Magehelper.Avalonia.ViewModels.Controls"
    Height="220"
    
    x:DataType="vm:ArtifactSettingsControlViewModel"
    mc:Ignorable="d">
    <ItemsControl Name="TabContent" ItemsSource="{Binding ArtifactSpells}">
        <ItemsControl.ItemsPanel>
            <ItemsPanelTemplate>
                <WrapPanel Orientation="Vertical" />
            </ItemsPanelTemplate>
        </ItemsControl.ItemsPanel>
        <ItemsControl.ItemTemplate>
            <DataTemplate>
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="120" />
                        <ColumnDefinition Width="auto" />
                        <ColumnDefinition Width="auto" />
                    </Grid.ColumnDefinitions>
                    <Label
                        Grid.Column="0"
                        Margin="5"
                        Content="{Binding Name}" />
                    <Label
                        Grid.Column="1"
                        Margin="5"
                        Content="AsP:" />
                    <NumericUpDown
                        Grid.Column="2"
                        Increment="1"
                        Minimum="0"
                        Value="{Binding Cost, UpdateSourceTrigger=PropertyChanged}" />
                </Grid>
            </DataTemplate>
        </ItemsControl.ItemTemplate>
    </ItemsControl>
</UserControl>
