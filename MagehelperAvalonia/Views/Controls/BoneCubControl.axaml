<UserControl
    x:Class="Magehelper.Avalonia.Views.Controls.BoneCubControl"
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:vm="using:Magehelper.Avalonia.ViewModels.Controls"
    x:DataType="vm:BoneCubControlViewModel"
    mc:Ignorable="d">
    <CheckBox
        Name="CbApport"
        Grid.Row="0"
        Margin="10,5,5,5"
        HorizontalAlignment="Left"
        Command="{Binding ApportCommand}"
        CommandParameter="{Binding $self.IsChecked}"
        Content="Apport"
        FlowDirection="RightToLeft" />
</UserControl>
