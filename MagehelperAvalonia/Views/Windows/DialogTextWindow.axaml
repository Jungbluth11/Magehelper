<Window
    x:Class="Magehelper.Avalonia.Views.Windows.DialogTextWindow"
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:vm="using:Magehelper.Avalonia.ViewModels.Windows"
    Name="dialogTextWindow"
    MinWidth="240"
    MinHeight="120"
    
    
    x:DataType="vm:DialogTextWindowViewModel"
    CanResize="False"
    ShowInTaskbar="False"
    SizeToContent="WidthAndHeight"
    WindowStartupLocation="CenterOwner"
    mc:Ignorable="d">
    <StackPanel>
        <Label Content="{Binding DialogText}" />
        <TextBox
            Margin="5"
            HorizontalAlignment="Left"
            Text="{Binding TextValue, UpdateSourceTrigger=PropertyChanged}"
            TextAlignment="Right"
            TextWrapping="Wrap" />
        <StackPanel
            HorizontalAlignment="Right"
            VerticalAlignment="Top"
            Orientation="Horizontal">
            <Button
                Width="100"
                Margin="5"
                Command="{Binding SubmitCommand}"
                CommandParameter="{Binding ElementName=dialogTextWindow}"
                Content="OK"
                IsDefault="True" />
        </StackPanel>
    </StackPanel>
</Window>
