<Window
    x:Class="Magehelper.Updater.UpdaterWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Magehelper.Updater"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="Magehelper Updater"
    Width="450"
    Height="100"
    ContentRendered="Window_ContentRendered"
    ResizeMode="NoResize"
    ShowInTaskbar="False"
    mc:Ignorable="d">
    <StackPanel Margin="10,0,10,10">
        <Label Name="StringHeadline">Update wird durchgeführt.</Label>
        <ProgressBar
            Name="ProgressBar"
            Width="400"
            Height="25" />
        <Label Name="StringStatus" />
    </StackPanel>
</Window>