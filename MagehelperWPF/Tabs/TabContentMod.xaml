                Name="StringModDescription9"
                Grid.Row="2"
                Grid.Column="4" />
            <Label
                Name="StringModName10"
                Grid.Row="3"
                Grid.Column="3" />
            <Label
                Name="StringModDescription10"
                Grid.Row="3"
                Grid.Column="4" />
            <Label
                Name="StringModName11"
                Grid.Row="4"
                Grid.Column="3" />
            <Label
                Name="StringModDescription11"
                Grid.Row="4"
                Grid.Column="4" />
            <Label
                Name="StringModName12"
                Grid.Row="5"
                Grid.Column="3" />
            <Label
                Name="StringModDescription12"
                Grid.Row="5"
                Grid.Column="4" />
            <Label
                Name="StringModName13"
                Grid.Row="6"
                Grid.Column="3" />
            <Label
                Name="StringModDescription13"
                Grid.Row="6"
                Grid.Column="4" />
            <Button
                Name="BtnAddMod0"
                Grid.Row="0"
                Grid.Column="2"
                Click="BtnAddMod0_Click">
                <Image Margin="1" Source="pack://application:,,,/Resources/add_button.png" />
            </Button>
            <Button
                Name="BtnAddMod1"
                Grid.Row="1"
                Grid.Column="2"
                Click="BtnAddMod1_Click">
                <Image Margin="1" Source="pack://application:,,,/Resources/add_button.png" />
            </Button>
            <Button
                Name="BtnAddMod2"
                Grid.Row="2"
                Grid.Column="2"
                Click="BtnAddMod2_Click">
                <Image Margin="1" Source="pack://application:,,,/Resources/add_button.png" />
            </Button>
            <Button
                Name="BtnAddMod3"
                Grid.Row="3"
