                Name="StringModName3"
                Grid.Row="3"
                Grid.Column="0" />
            <Label
                Name="StringModDescription3"
                Grid.Row="3"
                Grid.Column="1" />
            <Label
                Name="StringModName4"
                Grid.Row="4"
                Grid.Column="0" />
            <Label
                Name="StringModDescription4"
                Grid.Row="4"
                Grid.Column="1" />
            <Label
                Name="StringModName5"
                Grid.Row="5"
                Grid.Column="0" />
            <Label
                Name="StringModDescription5"
                Grid.Row="5"
                Grid.Column="1" />
            <Label
                Name="StringModName6"
                Grid.Row="6"
                Grid.Column="0" />
            <Label
                Name="StringModDescription6"
                Grid.Row="6"
                Grid.Column="1" />
            <Label
                Name="StringModName7"
                Grid.Row="0"
                Grid.Column="3" />
            <Label
                Name="StringModDescription7"
                Grid.Row="0"
                Grid.Column="4" />
            <Label
                Name="StringModName8"
