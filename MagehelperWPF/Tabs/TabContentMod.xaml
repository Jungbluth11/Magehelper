                Margin="5"
                SelectionChanged="DropdownRepresentation_SelectionChanged" />
            <Label Name="StringInfoText" Margin="5" />
        </StackPanel>
        <Grid Name="GridModifications" Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition />
                <ColumnDefinition />
                <ColumnDefinition Width="20" />
                <ColumnDefinition />
                <ColumnDefinition />
                <ColumnDefinition Width="20" />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition />
                <RowDefinition />
                <RowDefinition />
                <RowDefinition />
                <RowDefinition />
                <RowDefinition />
                <RowDefinition />
            </Grid.RowDefinitions>
            <Label
                Name="StringModName0"
                Grid.Row="0"
                Grid.Column="0" />
            <Label
                Name="StringModDescription0"
                Grid.Row="0"
                Grid.Column="1" />
            <Label
                Name="StringModName1"
                Grid.Row="1"
                Grid.Column="0" />
            <Label
                Name="StringModDescription1"
                Grid.Row="1"
                Grid.Column="1" />
            <Label
                Name="StringModName2"
                Grid.Row="2"
                Grid.Column="0" />
            <Label
                Name="StringModDescription2"
                Grid.Row="2"
                Grid.Column="1" />
